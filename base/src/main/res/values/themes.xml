<resources xmlns:tools="http://schemas.android.com/tools">

    <string name="network_connection_failed">网络连接失败</string>
    <string name="server_response_timed_out">服务器响应超时</string>
    <string name="data_loading_failed">数据加载失败</string>
    <string name="unknown_mistake">未知错误</string>
    <string name="data_processing_exception">数据处理异常~</string>
    <string name="the_program_network_is_getting_worse">网络异常</string>

    <style name="Dialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_00000000</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <!--        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>-->
    </style>

    <!-- 分页标签 -->
    <declare-styleable name="PagerSlidingTabStrip">
        <!-- 指针 -->
        <attr name="psts_indicatorColor" format="color" />
        <attr name="psts_indicatorHeight" format="dimension" />
        <!-- 分割线 -->
        <attr name="psts_underlineColor" format="color" />
        <attr name="psts_underlineHeight" format="dimension" />
        <!-- tabPadding -->
        <attr name="psts_tabPaddingLeftRight" format="dimension" />
        <attr name="psts_scrollOffset" format="dimension" />
    </declare-styleable>

</resources>